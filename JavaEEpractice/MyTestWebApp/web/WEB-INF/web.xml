<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>helloworld</servlet-name>   给原始类起个名字
        <servlet-class>HelloWorld</servlet-class>  原始java/class文件名字
    </servlet>

    <servlet-mapping>
        <servlet-name>helloworld</servlet-name>   原始类名字
        <url-pattern>/helloworld</url-pattern>    原始类路由，需要输入这个URL/路径才能访问到此servlet
    </servlet-mapping>
</web-app>